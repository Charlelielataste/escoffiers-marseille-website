---
import Navbar from "@/components/navigation/Navbar.astro";
import Footer from "@/components/navigation/Footer.astro";
import "../styles/global.css";
import "../styles/fonts.css";
import { type Locale, getAlternateLanguageUrl } from "../lib/i18n";
import { ClientRouter } from "astro:transitions";

const currentLocale = (Astro.currentLocale || "fr") as Locale;
export interface Props {
  navbar?: boolean;
  title?: string;
  description: string;
  keywords: string;
  canonical?: string;
  multilingualUrls?: {
    fr: string;
    en: string;
  };
  jsonLd?: object;
}

const {
  title,
  description,
  keywords,
  canonical,
  multilingualUrls,
  jsonLd,
  navbar = true,
} = Astro.props;

const fullTitle = title
  ? `${title} - Disciples Escoffier Provence Méditerranée`
  : "Disciples Escoffier Provence Méditerranée";

const organizationDescriptions =
  currentLocale === "fr"
    ? "Association gastronomique dédiée à la promotion de la gastronomie française et méditerranéenne"
    : "Gastronomy association dedicated to the promotion of French and Mediterranean gastronomy";

const organizationJsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Disciples d'Escoffier Provence Méditerranée",
  url: "https://disciplesescoffier-provence-mediterranee.org",
  logo: "https://disciplesescoffier-provence-mediterranee.org/logos/logo-escoffier-nav.png",
  description: organizationDescriptions,
  foundingDate: "2016",
  areaServed: {
    "@type": "Place",
    name: "Provence-Alpes-Côte d'Azur",
    containedInPlace: "France",
  },
  memberOf: {
    "@type": "Organization",
    name: "Disciples d'Escoffier International",
  },
  knowsAbout: [
    "Gastronomie française",
    "Cuisine méditerranéenne",
    "Auguste Escoffier",
    "Formation culinaire",
    "Événements gastronomiques",
  ],
  sameAs: [
    "https://www.facebook.com/disciples.escoffier.provence.mediterranee/?locale=fr_FR",
    "https://www.facebook.com/disciples.escoffier.provence.mediterranee/?locale=en_US",
    "https://www.instagram.com/disciples_escoffier_prov_med/?hl=en",
    "https://www.instagram.com/disciples_escoffier_prov_med/?hl=fr",
  ],
};

const currentUrl = new URL(Astro.request.url);
const canonicalUrl = canonical || currentUrl.href;

const alternateUrls = multilingualUrls || {
  fr: getAlternateLanguageUrl(Astro.url.pathname, "fr"),
  en: getAlternateLanguageUrl(Astro.url.pathname, "en"),
};
---

<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="/favicon-primary.svg"
      media="(prefers-color-scheme: light)"
    />
    <link
      rel="icon"
      href="/favicon-white.svg"
      media="(prefers-color-scheme: dark)"
    />
    <title>
      {fullTitle}
    </title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="robots"
      content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
    />
    <meta name="author" content="Disciples d'Escoffier Provence Méditerranée" />
    <meta name="theme-color" content="#1e40af" />
    <meta
      property="og:site_name"
      content="Disciples d'Escoffier Provence Méditerranée"
    />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="Disciples d'Escoffier Provence Méditerranée"
    />
    <meta
      name="twitter:image"
      content={new URL("/logos/logo-escoffier-nav.png", currentUrl.origin).href}
    />
    <meta
      name="twitter:image:alt"
      content="Disciples d'Escoffier Provence Méditerranée"
    />
    <meta
      name="twitter:domain"
      content="disciplesescoffier-provence-mediterranee.org"
    />
    <meta
      property="og:locale"
      content={currentLocale === "fr" ? "fr_FR" : "en_US"}
    />
    <meta
      property="og:image"
      content={new URL("/logos/logo-escoffier-nav.png", currentUrl.origin).href}
    />

    <link rel="canonical" href={canonicalUrl} />

    <!-- Hreflang for multilingual -->
    <link
      rel="alternate"
      hreflang="fr"
      href={new URL(alternateUrls.fr, currentUrl.origin).href}
    />
    <link
      rel="alternate"
      hreflang="en"
      href={new URL(alternateUrls.en, currentUrl.origin).href}
    />
    <link
      rel="alternate"
      hreflang="x-default"
      href={new URL(alternateUrls.fr, currentUrl.origin).href}
    />

    <!-- JSON-LD for the structure -->
    {
      jsonLd && (
        <script
          is:inline
          type="application/ld+json"
          set:html={JSON.stringify(jsonLd)}
        />
      )
    }

    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(organizationJsonLd)}
    />

    <ClientRouter />
  </head>
  <body class="font-['Museo_Sans']" style="overscroll-behavior: none;">
    {
      navbar && (
        <Navbar
          currentPath={Astro.url.pathname}
          multilingualUrls={multilingualUrls}
        />
      )
    }
    <slot />
    {navbar && <Footer />}
  </body>
</html>
