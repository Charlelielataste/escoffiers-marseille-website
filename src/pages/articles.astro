---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import ArticlesImage from "@/assets/hero/articles.jpeg";
import ArticlesSection from "@/components/articles/ArticlesSection.astro";
---

<Layout
  title="Articles"
  description="Restez informés de nos dernières actualités, conseils et recettes"
  keywords="Articles, actualités, conseils, recettes, provence, mediterranee, mediteranee, mediterranee, méditerranée, chefferie, chef, cuisine, gastronomie, cuisine française, cuisine méditerranéenne, disciple escoffier, disciples d'escoffier, disiples escoffier"
>
  <Hero picture={ArticlesImage} pictureAlt="Articles">
    <div class="relative z-20 text-center text-white px-4 max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-7xl font-bold mb-6 text-bordered">
        Articles
      </h1>
      <h2
        class="text-2xl md:text-5xl font-bold mb-8 text-primary text-bordered"
      >
        Notre Savoir-Faire
      </h2>
      <p
        class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed text-bordered"
      >
        Restez informés de nos dernières actualités, conseils et recettes
      </p>
    </div>
  </Hero>
  <ArticlesSection />
</Layout>
