---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import InstitutionSection from "@/components/home/InstitutionSection.astro";
import VolunteeringSection from "@/components/home/VolunteeringSection.astro";
import AssociationsSection from "@/components/home/AssociationsSection.astro";
import HomeImage from "@/assets/hero/home.jpg";
import HomeVideoSection from "@/components/home/HomeVideoSection.astro";
import LastActionsSection from "@/components/home/LastActionsSection.astro";
import NextEventsSection from "@/components/home/NextEventsSection.astro";
import InternationalBanner from "@/components/home/InternationalBanner.astro";
import DynamicBannerPartners from "@/components/home/DynamicBannerPartners.astro";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Disciples d'Escoffier Provence Méditerranée - Association Gastronomique Officielle",
  url: "https://disciplesescoffier-provence-mediterranee.org",
  description:
    "Association gastronomique officielle dédiée à la promotion de la gastronomie française et méditerranéenne, à l'héritage culinaire d'Auguste Escoffier et à l'excellence culinaire. Formation, événements gastronomiques et transmission du patrimoine culinaire français.",
  about: {
    "@type": "Thing",
    name: "Auguste Escoffier",
    description: "Héritage et tradition culinaire française",
  },
  keywords: [
    "Disciples Escoffier",
    "gastronomie française",
    "Auguste Escoffier",
    "cuisine méditerranéenne",
    "formation culinaire",
    "événements gastronomiques",
    "patrimoine culinaire",
    "excellence culinaire",
    "tradition française",
    "art culinaire",
  ],
  mainEntity: {
    "@type": "Organization",
    name: "Disciples d'Escoffier Provence Méditerranée",
    foundingDate: "2016",
    description:
      "Association gastronomique perpétuant l'héritage d'Auguste Escoffier",
    areaServed: "Provence-Alpes-Côte d'Azur",
    knowsAbout: [
      "Gastronomie française",
      "Cuisine méditerranéenne",
      "Formation culinaire",
      "Patrimoine gastronomique",
    ],
  },
};
---

<Layout
  title="Accueil - Association Gastronomique Officielle"
  description="Disciples d'Escoffier Provence Méditerranée : Association gastronomique officielle perpétuant l'héritage culinaire d'Auguste Escoffier. Formation professionnelle, événements gastronomiques d'excellence, transmission du patrimoine culinaire français et méditerranéen. Rejoignez l'élite de la gastronomie française."
  keywords="Disciples Escoffier, Auguste Escoffier héritage, gastronomie française excellence, cuisine méditerranéenne authentique, formation culinaire professionnelle, association gastronomique officielle, événements culinaires prestige, patrimoine gastronomique français, art culinaire français, tradition culinaire Escoffier, école de cuisine Marseille, chef culinaire formation, gastronomie Provence Méditerranée, excellence culinaire française, maître cuisinier Auguste Escoffier, cuisine française tradition, gastronomie de prestige, formation chef cuisinier, événements gastronomiques Marseille, association culinaire Provence"
  jsonLd={jsonLd}
>
  <div class="relative">
    <Hero
      picture={HomeImage}
      pictureAlt="Disciples d'Escoffier Provence Méditerranée"
    >
      <div class="relative z-20 text-center text-white px-4 max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 text-bordered">
          Disciples d'Escoffier
        </h1>
        <h2
          class="text-3xl md:text-5xl mb-8 text-blue-500 font-bold text-bordered"
        >
          Provence Méditerranée
        </h2>
        <p
          class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto leading-relaxed text-bordered"
        >
          Ensemble, faisons grandir la gastronomie dans toute sa diversité.
        </p>
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center"
        >
          <a
            href={`/a-propos/`}
            aria-label="Découvrir l'association gastronomique Disciples d'Escoffier"
            title="Association gastronomique Auguste Escoffier"
            class="bg-primary w-[250px] border-2 border-primary text-bordered hover:bg-primary/90 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 transform hover:shadow-lg flex items-center justify-center"
          >
            Qui sommes-nous ?
          </a>
          <a
            href={`/evenements/`}
            aria-label="Événements gastronomiques et formation culinaire"
            title="Événements culinaires prestige Escoffier"
            class="border-2 w-[250px] border-white hover:bg-white hover:text-black px-8 py-3 rounded-lg font-semibold transition-colors"
          >
            Nos événements
          </a>
        </div>
      </div>
    </Hero>

    <InstitutionSection />
    <VolunteeringSection />
    <HomeVideoSection />
    <AssociationsSection />
    <section class="relative md:py-20 py-10">
      <div class="max-w-6xl mx-auto px-4 grid grid-cols-1 gap-6">
        <LastActionsSection />
        <NextEventsSection />
      </div>
    </section>
    <DynamicBannerPartners />
    <InternationalBanner />

    <!-- Contenu SEO riche pour surpasser la concurrence -->
    <section class="sr-only" aria-hidden="true">
      <h2>
        Disciples d'Escoffier Provence Méditerranée - Excellence Gastronomique
      </h2>
      <p>
        Notre association gastronomique perpétue l'héritage culinaire d'Auguste
        Escoffier, maître de la cuisine française. Fondée en 1954, nous sommes
        l'association officielle des Disciples d'Escoffier en région
        Provence-Alpes-Côte d'Azur, dédiée à la promotion de la gastronomie
        française et méditerranéenne d'excellence.
      </p>
      <p>
        Formation culinaire professionnelle, événements gastronomiques de
        prestige, transmission du patrimoine culinaire français, art culinaire
        méditerranéen, tradition Escoffier, école de cuisine Marseille, maître
        cuisinier formation, gastronomie Provence excellence, cuisine française
        authentique, événements culinaires Marseille.
      </p>
      <h3>Formation et Événements Gastronomiques</h3>
      <p>
        Nos formations culinaires professionnelles et nos événements
        gastronomiques perpétuent la tradition d'Auguste Escoffier. Rejoignez
        l'élite de la gastronomie française à travers nos <a
          href="/evenements/"
          title="Événements gastronomiques Disciples Escoffier"
          >événements culinaires</a
        >
        et découvrez notre <a
          href="/a-propos/"
          title="Association gastronomique Auguste Escoffier"
          >mission gastronomique</a
        >.
      </p>
    </section>
  </div>
</Layout>
