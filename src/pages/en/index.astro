---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import InstitutionSection from "@/components/home/InstitutionSection.astro";
import VolunteeringSection from "@/components/home/VolunteeringSection.astro";
import AssociationsSection from "@/components/home/AssociationsSection.astro";
import HomeImage from "@/assets/hero/home.jpg";
import HomeVideoSection from "@/components/home/HomeVideoSection.astro";
import LastActionsSection from "@/components/home/LastActionsSection.astro";
import NextEventsSection from "@/components/home/NextEventsSection.astro";
import DynamicBannerPartners from "@/components/home/DynamicBannerPartners.astro";
import homeImage from "public/logos/logo-escoffier-nav.png";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Disciples d'Escoffier Provence Méditerranée - Home",
  url: "https://disciplesescoffier-provence-mediterranee.org",
  logo: "https://disciplesescoffier-provence-mediterranee.org/logos/logo-escoffier-nav.png",
  description:
    "Official Provence Méditerranée delegation of the gastronomic association dedicated to promoting French and Mediterranean gastronomy, the culinary heritage of Auguste Escoffier, and culinary excellence. Training, gastronomic events, and transmission of French culinary heritage.",
  about: {
    "@type": "Thing",
    name: "Auguste Escoffier",
    description: "French culinary heritage and tradition",
  },
  keywords: [
    "Disciples Escoffier",
    "French gastronomy",
    "Auguste Escoffier",
    "Mediterranean cuisine",
    "recipes",
    "cuisines",
    "cooking",
    "French cuisine",
    "Mediterranean cuisine",
    "quality cuisine",
    "culinary training",
    "gastronomic events",
    "culinary heritage",
    "culinary excellence",
    "French tradition",
    "culinary art",
    "Provence Méditerranée",
    "Provence Méditerranée delegation",
    "official gastronomic association",
    "gastronomic association",
    "official gastronomic association",
    "disciples escoffier",
    "Marseille",
    "Aix-en-Provence",
    "Nice",
    "Toulon",
  ],
  mainEntity: {
    "@type": "Organization",
    name: "Disciples d'Escoffier Provence Méditerranée",
    foundingDate: "2016",
    description:
      "Gastronomic association perpetuating the heritage of Auguste Escoffier in Provence Méditerranée",
    areaServed: "Provence-Alpes-Côte d'Azur",
    knowsAbout: [
      "French gastronomy",
      "Mediterranean cuisine",
      "Culinary training",
      "Gastronomic heritage",
      "Auguste Escoffier",
      "Culinary training",
      "Gastronomic events",
    ],
    sameAs: [
      "https://www.facebook.com/disciples.escoffier.provence.mediterranee/?locale=fr_FR",
      "https://www.facebook.com/disciples.escoffier.provence.mediterranee/?locale=en_US",
      "https://www.instagram.com/disciples_escoffier_prov_med/?hl=en",
      "https://www.instagram.com/disciples_escoffier_prov_med/?hl=fr",
    ],
  },
};
---

<Layout
  title="Home - Official Association"
  description="Disciples d'Escoffier Provence Méditerranée: Official association perpetuating Auguste Escoffier's culinary heritage. Professional culinary training, prestigious gastronomic events, French and Mediterranean culinary heritage transmission. Join the French gastronomy elite."
  keywords="Disciples Escoffier, Auguste Escoffier legacy, French gastronomy excellence, authentic Mediterranean cuisine, professional culinary training, official gastronomy association, prestigious culinary events, French gastronomic heritage, French culinary arts, Escoffier culinary tradition, culinary school Marseille, chef culinary training, Provence Mediterranean gastronomy, French culinary excellence, master chef Auguste Escoffier, French cuisine tradition, prestige gastronomy, chef training, gastronomic events Marseille, Provence culinary association, disciples escoffier international, international disciples escoffier, disciple escoffier"
  jsonLd={jsonLd}
>
  <div class="relative">
    <Hero
      picture={HomeImage}
      pictureAlt="Disciples d'Escoffier Provence Méditerranée"
    >
      <div class="relative z-20 text-center text-white px-4 max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 text-bordered">
          Disciples d'Escoffier
        </h1>
        <h2
          class="text-3xl md:text-5xl mb-8 text-blue-500 font-bold text-bordered"
        >
          Provence Méditerranée
        </h2>
        <p
          class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto leading-relaxed text-bordered"
        >
          Together, let's grow gastronomy in all its diversity.
        </p>
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center"
        >
          <a
            href={`/en/about/`}
            aria-label="Discover Disciples d'Escoffier gastronomy association"
            title="Auguste Escoffier gastronomy association"
            class="bg-primary w-[250px] border-2 border-primary text-bordered hover:bg-primary/90 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 transform hover:shadow-lg flex items-center justify-center"
          >
            Who we are ?
          </a>
          <a
            href={`/en/events/`}
            aria-label="Gastronomic events and culinary training"
            title="Escoffier prestige culinary events"
            class="border-2 w-[250px] border-white hover:bg-white hover:text-black px-8 py-3 rounded-lg font-semibold transition-colors"
          >
            Our events
          </a>
        </div>
      </div>
    </Hero>
    <section
      class="relative py-10 bg-cover bg-center bg-no-repeat"
      style={`background-image: linear-gradient(rgba(176, 103, 92, 0.9), rgba(176, 103, 92, 0.9)), url('${homeImage.src}');`}
    >
      <div class="max-w-6xl mx-auto px-4 flex flex-col">
        <p class="text-xl mb-6 leading-relaxed font-bold text-white">
          Welcome to the official site of Disciples d'Escoffier Provence
          Méditerranée, an official association dedicated to the promotion of
          French and Mediterranean gastronomy, the culinary heritage of Auguste
          Escoffier and culinary excellence. Training, gastronomic events and
          transmission of the French culinary heritage.
          <br />
          <br />
          We are a delegation of the association of
          <a
            href={`https://disciplesescoffier.org/en/`}
            rel="noopener noreferrer"
            aria-label="to the site of the International Disciples d'Escoffier"
            target="_blank"
            class="underline hover:text-secondary font-bold"
          >
            Disciples d'Escoffier International
          </a>
          , an association founded in 1954 that brings together enthusiasts of gastronomy
          from all over the world, counting more than 10000 members and 45 delegations.
        </p>
        <cite class="font-bold text-white self-end mt-3"
          >- Alain Laporte, President of Disciples d'Escoffier Provence
          Méditerranée</cite
        >
      </div>
    </section>
    <InstitutionSection />
    <VolunteeringSection />
    <HomeVideoSection />
    <AssociationsSection />
    <section class="relative md:py-20 py-10">
      <div class="max-w-6xl mx-auto px-4 grid grid-cols-1 gap-6">
        <LastActionsSection />
        <NextEventsSection />
      </div>
    </section>
    <DynamicBannerPartners />

    <section class="sr-only" aria-hidden="true">
      <h2>
        Disciples d'Escoffier Provence Méditerranée - Gastronomic Excellence
      </h2>
      <p>
        Our gastronomy association perpetuates Auguste Escoffier's culinary
        heritage, master of French cuisine. Founded in 1954, we are the official
        Disciples d'Escoffier association in the Provence-Alpes-Côte d'Azur
        region, dedicated to promoting French and Mediterranean gastronomy of
        excellence.
      </p>
      <p>
        Professional culinary training, prestigious gastronomic events, French
        culinary heritage transmission, Mediterranean culinary arts, Escoffier
        tradition, culinary school Marseille, master chef training, Provence
        gastronomy excellence, authentic French cuisine, culinary events
        Marseille.
      </p>
      <h3>Culinary Training and Gastronomic Events</h3>
    </section>
  </div>
</Layout>
