---
import Hero from "@/components/Hero.astro";
import Layout from "@/layouts/Layout.astro";
import MembersImage from "@/assets/hero/members.jpg";
import DisciplesSection from "@/components/members/DisciplesSection.astro";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "The Disciples",
  url: "https://disciplesescoffier-provence-mediterranee.org/en/the-disciples/",
  description:
    "Discover the team of Disciples d'Escoffier Provence Mediterranée, composed of members from all professions of gastronomy.",
};
---

<Layout
  title="The Disciples"
  description="Discover the team of Disciples d'Escoffier Provence Mediterranée, composed of members from all professions of gastronomy."
  keywords="The Disciples, team, Disciples d'Escoffier, Provence Méditerranée, disciples, gastronomy, provence, mediterranee, mediteranee, mediterranee, méditerranée, disciple escoffier, disciples d'escoffier, disiples escoffier"
  jsonLd={jsonLd}
>
  <div class="relative">
    <Hero picture={MembersImage} pictureAlt="The Disciples">
      <div class="relative z-20 text-center text-white px-4 max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-7xl font-bold mb-6 text-bordered">
          The Disciples
        </h1>
        <h2
          class="text-2xl md:text-5xl font-bold mb-8 text-primary text-bordered"
        >
          Our Team
        </h2>
        <p
          class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed text-bordered"
        >
          Discover the team of Disciples d'Escoffier Provence Mediterranée,
          composed of members from all professions of gastronomy.
        </p>
      </div>
    </Hero>
    <DisciplesSection />
  </div>
</Layout>
