---
import Layout from "@/layouts/Layout.astro";
import { getEventBySlug, getEventSlugs } from "@/lib/sanity-queries";
import EventContent from "@/components/events/EventContent.astro";

export async function getStaticPaths() {
  const events = await getEventSlugs();

  return events.map((event) => ({
    params: {
      slug: event.slug.en.current,
    },
  }));
}

const { slug } = Astro.params;
const event = await getEventBySlug(slug!, "en");

if (!event) {
  return Astro.redirect("/en/events");
}

const multilingualSlugs = {
  fr: `/evenements/${event.slug.fr.current}/`,
  en: `/en/events/${event.slug.en.current}/`,
};

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Event",
  url: `https://disciplesescoffier-provence-mediterranee.org/en/events/${event.slug.en.current}/`,
  description: event.intro.en,
  keywords:
    "provence, mediterranee, mediteranee, mediterranee, méditerranée, événements, actions, events, actions, activities, charity, donation, donate",
};
---

<Layout
  title={event.title.en}
  description={event.intro.en}
  keywords="provence, mediterranee, Disciples Escoffier, disciples, escoffier, escoffier, mediteranee, mediterranee, méditerranée, events, actions, events, actions, activities, charity, donation, donate"
  jsonLd={jsonLd}
  multilingualUrls={multilingualSlugs}
>
  <EventContent event={event} />
</Layout>
