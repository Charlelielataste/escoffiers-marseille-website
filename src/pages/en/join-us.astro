---
import Hero from "@/components/Hero.astro";
import Layout from "@/layouts/Layout.astro";
import ContactForm from "@/components/contact/ContactForm.astro";
import ContactImage from "@/assets/hero/contact.png";
---

<Layout title="Join Us">
  <div class="relative">
    <Hero picture={ContactImage} pictureAlt="Join Us">
      <div class="relative z-20 text-center text-white px-4 max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl font-bold mb-6">Join Us</h1>
        <h2 class="text-3xl md:text-5xl font-bold mb-8 text-primary">
          Contact Us
        </h2>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed">
          Passionné(e) de cuisine française et désireux(se) de perpétuer
          l'héritage d'Auguste Escoffier ? Contactez-nous pour découvrir comment
          devenir disciple et servir notre communauté marseillaise.
        </p>
      </div>
    </Hero>

    <!-- Formulaire de contact -->
    <ContactForm locale="en" />
  </div>
</Layout>
