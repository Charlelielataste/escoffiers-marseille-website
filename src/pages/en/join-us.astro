---
import Hero from "@/components/Hero.astro";
import Layout from "@/layouts/Layout.astro";
import ContactForm from "@/components/contact/ContactForm.astro";
import ContactImage from "@/assets/hero/contact.jpg";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Join Us",
  url: "https://disciplesescoffier-provence-mediterranee.org/en/join-us/",
  description:
    "Passionate about cuisine or the professions of the kitchen and want to perpetuate the legacy of Auguste Escoffier ? Contact us to discover how to become a disciple and serve gastronomy",
};
---

<Layout
  title="Join Us"
  description="Passionate about cuisine or the professions of the kitchen and want to perpetuate the legacy of Auguste Escoffier ? Contact us to discover how to become a disciple and serve gastronomy"
  keywords="Join Us, Provence Méditerranée, contact, contactez-nous, become disciple, serve gastronomy"
>
  jsonLd={jsonLd}
  >
  <div class="relative">
    <Hero picture={ContactImage} pictureAlt="Join Us">
      <div class="relative z-20 text-center text-white px-4 max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-7xl font-bold mb-6 text-bordered">
          Join Us
        </h1>
        <h2
          class="text-2xl md:text-5xl font-bold mb-8 text-primary text-bordered"
        >
          Contact Us
        </h2>
        <p
          class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed text-bordered"
        >
          Passionate about cuisine or the professions of the kitchen and want to
          perpetuate the legacy of Auguste Escoffier ? Contact us to discover
          how to become a disciple and serve gastronomy
        </p>
      </div>
    </Hero>

    <section class="relative py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div
            class="border-l-4 border-primary bg-primary/10 p-6 rounded-lg mb-10 flex flex-col items-center justify-center shadow-lg"
          >
            <blockquote class="text-lg italic text-text-primary mb-3">
              "Gastronomy is an art that must be treated with respect and
              passion."
            </blockquote>
            <cite class="text-primary-accessible font-semibold"
              >Auguste Escoffier</cite
            >
          </div>
          <ContactForm />
        </div>
      </div>
    </section>
  </div>
</Layout>
