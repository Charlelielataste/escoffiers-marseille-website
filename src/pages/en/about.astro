---
import Hero from "@/components/Hero.astro";
import MissionSection from "@/components/about/MissionSection.astro";
import Layout from "@/layouts/Layout.astro";
import ValuesSection from "@/components/about/ValuesSection.astro";
import TeamSection from "@/components/about/TeamSection.astro";
import AboutImage from "@/assets/hero/about.avif";
import InternationalBanner from "@/components/home/InternationalBanner.astro";
---

<Layout title="About">
  <div class="relative">
    <Hero picture={AboutImage} pictureAlt="About">
      <div class="relative z-20 text-center text-white px-4 max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl font-bold mb-6">About</h1>
        <h2 class="text-3xl md:text-5xl font-bold mb-8 text-primary">
          Our Institution
        </h2>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed">
          Disciples d&apos;Escoffier, nous perpétuons l&apos;excellence
          culinaire française au service de la communauté marseillaise
        </p>
      </div>
    </Hero>

    <MissionSection />
    <ValuesSection />
    <TeamSection />
  </div>
</Layout>
