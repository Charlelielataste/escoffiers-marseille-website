---
import MailIcon from "@/components/icons/MailIcon.astro";
import UserAddIcon from "@/components/icons/UserAddIcon.astro";
import { getNavUrls, getTranslations, type Locale } from "@/lib/i18n";
import { Image } from "astro:assets";
const currentYear = new Date().getFullYear();

const currentLocale = (Astro.currentLocale || "fr") as Locale;
const navUrls = getNavUrls(currentLocale);

const t = getTranslations(currentLocale);
---

<footer class="bg-primary relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 pb-8">
      <!-- Logo et description -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center mb-4">
          <a
            href={navUrls.home}
            class="hover:scale-110 w-10 h-10 flex items-center justify-center transition-colors bg-white rounded-full mr-2 border border-black/60"
          >
            <Image
              src="/logos/logo-face-color.png"
              alt="Logo Escoffiers"
              width="50"
              height="50"
              class="h-9 w-auto p-1"
              loading="lazy"
            />
          </a>
          <h3 class="text-xl font-bold text-white text-bordered-light">
            Les Disciples d'Escoffier
          </h3>
        </div>
        <p
          class="text-text-secondary mb-6 max-w-md text-bordered-light font-medium"
        >
          Association culinaire dédiée à la promotion de l'art culinaire et à la
          transmission des valeurs d'excellence d'Auguste Escoffier.
        </p>
        <div class="flex space-x-4">
          <a
            href="https://facebook.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-secondary hover:text-tertiary transition-colors hover:scale-110"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
          <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-secondary hover:text-tertiary transition-colors hover:scale-110"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="text-lg font-bold text-white mb-4 text-bordered-light">
          Navigation
        </h4>
        <ul class="space-y-2">
          <li>
            <a
              href={navUrls.about}
              class="text-text-secondary font-medium hover:text-tertiary transition-colors text-bordered-light"
            >
              {t.nav.about}
            </a>
          </li>
          <li>
            <a
              href={navUrls.articles}
              class="text-text-secondary font-medium hover:text-tertiary transition-colors text-bordered-light"
            >
              {t.nav.articles}
            </a>
          </li>
          <li>
            <a
              href={navUrls.events}
              class="text-text-secondary font-medium hover:text-tertiary transition-colors text-bordered-light"
            >
              {t.nav.events}
            </a>
          </li>
          <li>
            <a
              href={navUrls.members}
              class="text-text-secondary font-medium hover:text-tertiary transition-colors text-bordered-light"
            >
              {t.nav.members}
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-lg font-bold text-white mb-4 text-bordered-light">
          Contact
        </h4>
        <div class="space-y-3">
          <div class="flex items-center gap-x-2">
            <MailIcon size="16" class="text-white" />
            <a
              href="mailto:Escoffiers@quelquechose.com"
              class="text-white font-medium hover:text-tertiary transition-colors text-bordered-light"
            >
              Escoffiers@quelquechose.com
            </a>
          </div>
          <div class="flex items-center gap-x-2">
            <UserAddIcon size="16" class="text-white" />
            <a
              href={navUrls.contact}
              class="text-text-secondary font-medium hover:text-tertiary transition-colors text-bordered-light"
            >
              Je souhaite devenir membre
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Ligne de séparation -->
    <div class="pt-8 border-t border-white/20">
      <div class="flex flex-col md:flex-row justify-between md:items-center">
        <p class="text-white font-medium text-bordered-light">
          © {currentYear} Les Disciples d'Escoffier. Tous droits réservés.
        </p>
        <div
          class="flex items-center justify-between sm:justify-end space-x-6 mt-6 md:mt-0"
        >
          <!-- Bouton pour désactiver le curseur personnalisé -->
          <div class="hidden sm:block">
            <button
              id="cursor-toggle"
              class="flex text-white font-medium hover:text-tertiary transition-colors text-bordered-light"
              aria-label="Activer/Désactiver le curseur personnalisé"
            >
              <span id="cursor-toggle-text"
                >Désactiver curseur personnalisé</span
              >
            </button>
          </div>
          <a
            href="/mentions-legales"
            class="text-text-secondary font-medium hover:text-tertiary transition-colors text-bordered-light"
          >
            Mentions légales
          </a>
          <a
            href="/politique-confidentialite"
            class="text-text-secondary font-medium hover:text-tertiary transition-colors text-bordered-light"
          >
            Politique de confidentialité
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const cursorToggle = document.getElementById("cursor-toggle");
    const cursorToggleText = document.getElementById("cursor-toggle-text");

    // Vérifier l'état actuel du curseur personnalisé
    const customCursorDisabled =
      localStorage.getItem("customCursorDisabled") === "true";

    // Appliquer l'état initial
    updateCursorState(customCursorDisabled);

    // Gestionnaire d'événement pour le bouton
    cursorToggle?.addEventListener("click", function () {
      const isCurrentlyDisabled = document.body.classList.contains(
        "custom-cursor-disabled"
      );
      const newState = !isCurrentlyDisabled;

      // Sauvegarder la préférence
      localStorage.setItem("customCursorDisabled", newState.toString());

      // Appliquer le nouvel état
      updateCursorState(newState);
    });

    function updateCursorState(disabled: boolean) {
      if (disabled) {
        document.body.classList.add("custom-cursor-disabled");
        if (cursorToggleText) {
          cursorToggleText.textContent = "Activer curseur personnalisé";
        }
      } else {
        document.body.classList.remove("custom-cursor-disabled");
        if (cursorToggleText) {
          cursorToggleText.textContent = "Désactiver curseur personnalisé";
        }
      }
    }
  });
</script>
