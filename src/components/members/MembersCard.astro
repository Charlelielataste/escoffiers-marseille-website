---
export interface Props {
  photo: string;
  color: string;
  nom: string;
  job: string;
  description: string;
  contact: string;
  restaurant: string;
  size?: string;
}

const {
  photo,
  color,
  nom,
  job,
  description,
  contact,
  restaurant,
  size = "112px",
} = Astro.props;
---

<div class="flex flex-col items-center text-center w-80">
  <!-- Photo de profil ronde -->
  <div class="relative mb-4">
    <div
      class="rounded-full overflow-hidden shadow-lg border-4"
      style={`width: ${size}; height: ${size}; border-color: ${color};`}
    >
      <img
        src={photo}
        alt={nom}
        class="object-cover"
        style="width: 100%; height: 100%; object-fit: cover;"
      />
    </div>
  </div>

  <!-- Informations du membre -->
  <h4 class="text-lg font-bold text-gray-900 mb-1">{nom}</h4>
  <p class="text-sm font-medium mb-2" style={`color: ${color};`}>
    {job}
  </p>
  <p class="text-sm text-gray-600 mb-2 line-clamp-2 font-semibold">
    {description}
  </p>
  <p class="text-sm text-gray-500 mb-1">
    üìç {restaurant}
  </p>
  <a href={`mailto:${contact}`} class="text-sm text-primary"> ‚úâÔ∏è Contact </a>
</div>
