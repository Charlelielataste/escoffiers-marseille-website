---
export interface Props {
  title: string;
  date: string;
  image: string;
  excerpt: string;
  slug: string;
}
const { title, date, image, excerpt, slug } = Astro.props as Props;
---

<div
  class="flex rounded-3xl bg-container shadow-xl w-full border border-primary/20 p-5"
>
  <div class="w-full flex flex-col h-full">
    <img
      src={image}
      alt="Image de l'article"
      class="object-cover w-full h-48 overflow-hidden rounded-2xl mb-4"
    />

    <div class="text-sm text-gray-600 mb-2 font-bold">{date}</div>
    <h3 class="text-2xl font-bold text-primary mb-3">{title}</h3>

    <p class="text-gray-700 leading-relaxed line-clamp-5 mb-4">
      {excerpt}
    </p>

    <div class="flex justify-end mt-auto">
      <a
        href={`/articles/${slug}`}
        class="text-primary hover:text-primary/80 font-semibold text-sm transition-colors duration-200"
      >
        Lire l&apos;article â†’
      </a>
    </div>
  </div>
</div>
