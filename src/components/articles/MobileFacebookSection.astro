---
import Facebook from "@/components/icons/Facebook.astro";
import { getTranslations, type Locale } from "@/lib/i18n";
const currentLocale = (Astro.currentLocale || "fr") as Locale;
const t = getTranslations(currentLocale);
---

<div
  class="lg:hidden relative bg-gradient-to-br from-container to-white rounded-3xl shadow-lg border-2 border-[#1877f2]/50 overflow-hidden mb-8 max-w-4xl mx-auto"
>
  <div
    class="p-4 flex flex-col md:flex-row items-center text-center md:text-left space-y-4 md:space-y-0 md:space-x-6"
  >
    <div
      class="w-16 h-16 bg-[#1877f2] text-white rounded-full flex items-center justify-center shadow-lg flex-shrink-0"
    >
      <Facebook class="size-8" fill="currentColor" />
    </div>

    <div class="space-y-3 flex-1">
      <h3 class="text-xl font-bold text-black">
        {t.MobileFacebookSection.title}
      </h3>
      <p class="text-sm text-black leading-relaxed max-w-md">
        {t.MobileFacebookSection.description}
      </p>
    </div>

    <a
      href="https://www.facebook.com/disciples.escoffier.provence.mediterranee"
      aria-label={t.MobileFacebookSection.title}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center px-5 py-2 bg-[#1877f2] text-white text-bordered font-semibold rounded-lg shadow-md"
    >
      {t.MobileFacebookSection.button}
    </a>
  </div>
</div>
