---
import { getTranslations, type Locale } from "@/lib/i18n";
import { Image } from "astro:assets";

export interface Props {
  title: string;
  date: string;
  location: string;
  image: string;
  description: string;
  slug: string;
  locale?: Locale;
}
const {
  title,
  date,
  location,
  image,
  description,
  slug,
  locale = "fr",
} = Astro.props as Props;

const eventPath =
  locale === "fr" ? `/evenements/${slug}` : `/en/events/${slug}`;
const t = getTranslations(locale);
---

<div id={slug} style="scroll-margin-top: 150px;">
  <div
    class="relative rounded-3xl shadow-xl w-full group p-1 bg-tertiary h-[550px] sm:h-[700px] overflow-hidden transition-transform duration-300 hover:scale-102"
  >
    <Image
      src={image}
      alt={title}
      class="absolute inset-0 w-full h-full p-1 rounded-3xl object-cover opacity-90"
      width={600}
      height={550}
      loading="lazy"
    />
    <a href={eventPath} class="relative h-full flex flex-col justify-end p-6">
      <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-5 shadow-xl">
        <h3 class="text-2xl font-bold text-tertiary mb-2 leading-tight">
          {title}
        </h3>
        <div class="mb-3">
          <div class="text-lg font-bold text-gray-800 mb-1">{date}</div>
          <div class="text-base text-primary">{location}</div>
        </div>

        <p class="text-gray-700 text-sm leading-relaxed mb-6 line-clamp-3">
          {description}
        </p>
        <div class="flex justify-center">
          <div
            class="w-[80%] text-center bg-tertiary hover:bg-tertiary/90 text-white font-semibold py-3 px-6 rounded-full transition-all duration-300 transform group-hover:scale-[1.02] group-hover:shadow-lg flex items-center justify-center"
          >
            {t.events.seeMore}
          </div>
        </div>
      </div>
    </a>
  </div>
</div>
