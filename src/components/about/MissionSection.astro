---
import { getTranslations, type Locale } from "@/lib/i18n";
import { Image } from "astro:assets";
import MissionImage from "@/assets/about/mission.jpeg";
const currentLocale = (Astro.currentLocale || "fr") as Locale;
const t = getTranslations(currentLocale);
---

<section class="relative md:py-20 py-10 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {t.about.missionSection.title}
        </h2>
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          {t.about.missionSection.description}
        </p>
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          {t.about.missionSection.nextParagraph}
        </p>
        <div class="flex flex-wrap gap-4">
          <span
            class="bg-primary/40 text-black px-4 py-2 rounded-full text-sm font-bold"
          >
            {t.about.missionSection.excellence}
          </span>
          <span
            class="bg-secondary/40 text-black px-4 py-2 rounded-full text-sm font-bold"
          >
            {t.about.missionSection.charity}
          </span>
          <span
            class="bg-tertiary/40 text-black px-4 py-2 rounded-full text-sm font-bold"
          >
            {t.about.missionSection.tradition}
          </span>
        </div>
      </div>

      <div
        class="relative h-96 lg:h-[500px] rounded-2xl overflow-hidden shadow-2xl"
      >
        <Image
          width="1080"
          height="900"
          src={MissionImage}
          alt={currentLocale === "fr"
            ? "Table d'un repas Escoffier pendant un événement"
            : "Escoffier's table during an event"}
          class="object-cover w-full h-full"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"
        >
        </div>
      </div>
    </div>
  </div>
</section>
