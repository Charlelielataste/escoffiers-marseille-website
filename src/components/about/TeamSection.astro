---
import { Image } from "astro:assets";
import { getTranslations, type Locale } from "@/lib/i18n";
import TeamImage from "@/assets/about/team.jpg";
import { getAssociationAge } from "@/lib/date";
const currentLocale = (Astro.currentLocale || "fr") as Locale;
const t = getTranslations(currentLocale);
---

<section class="relative py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="relative">
        <div
          class="relative h-96 lg:h-[500px] rounded-2xl overflow-hidden shadow-2xl"
        >
          <Image
            width="1080"
            height="900"
            src={TeamImage}
            alt="Cuisine professionnelle"
            class="object-cover w-full h-full"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"
          >
          </div>
        </div>
      </div>

      <div class="space-y-8">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {t.about.teamSection.title}
        </h2>
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          {t.about.teamSection.description}
        </p>
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          {t.about.teamSection.nextParagraph}
        </p>

        <div class="grid grid-cols-2 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">
              {getAssociationAge()}
            </div>
            <div class="text-gray-600">
              {t.about.teamSection.yearsOfExperience}
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">30+</div>
            <div class="text-gray-600">{t.about.teamSection.eventsPerYear}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
