---
import { getTranslations, type Locale } from "@/lib/i18n";

const currentLocale = (Astro.currentLocale || "fr") as Locale;
const t = getTranslations(currentLocale);
---

<section class="relative py-7 bg-background">
  <div class="max-w-6xl mx-auto px-4">
    <p class="text-center font-medium">
      {t.home.internationalBanner}
      <a
        href={`https://disciplesescoffier.org/${currentLocale === "fr" ? "" : "en/"}`}
        rel="noopener noreferrer"
        aria-label={currentLocale === "fr"
          ? "vers le site des Disciples d'Escoffier International"
          : "to the site of the International Disciples d'Escoffier"}
        target="_blank"
        class="hover:underline hover:text-secondary font-bold text-primary-accessible"
      >
        <strong>"Les Disciples d'Escoffier International"</strong>
      </a>
    </p>
  </div>
</section>
